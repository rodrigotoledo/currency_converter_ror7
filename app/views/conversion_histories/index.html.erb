<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Conversion histories</h1>
  </div>

  <%= turbo_stream_from "conversion_histories" %>
  <div class="min-w-full">
    <%= turbo_frame_tag "conversion_histories" do %>
    <%= render @conversion_histories %>
    <% end %>
  </div>
</div>
